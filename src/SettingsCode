using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Data.SqlClient;
using System.Drawing;
using System.Globalization;
using System.Linq;
using System.Net.NetworkInformation;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace Металлопрокат
{
    public partial class SettingsForm : Form
    {
        private Button settingsButton;
        private Button menuButton;
        private Button tablesButton;
        private Button usersButton;
        private TextBox connectionStringTextBox;
        private Panel settingsPanel;    //Основной серый фон

        public SettingsForm()
        {
            InitializeComponent();
            InitializeUI();
        }

        private void InitializeUI()
        {
            // Buttons on the left
            settingsButton = CreateButton("Настройки", 10, 10);
            menuButton = CreateButton("Меню", 10, 60);
            Button highlightedSettingsButton = CreateButton("Настройки", 10, 110);      //Повторяем кнопку "Настройки", но подсвеченную
            tablesButton = CreateButton("Таблицы", 10, 160);
            usersButton = CreateButton("Пользователи", 10, 210);

            highlightedSettingsButton.BackColor = SystemColors.Highlight;
            highlightedSettingsButton.ForeColor = Color.White;      //Белый текст

            // Settings Panel
            settingsPanel = new Panel();
            BackColor = Color.LightGray;       //Цвет фона
            settingsPanel.Location = new Point(120, 10);         //Позиция
            settingsPanel.Size = new Size(450, 250);             //Размер
            settingsPanel.BackColor = Color.LightGray; // Light gray

            // Textbox
            connectionStringTextBox = new TextBox();
            connectionStringTextBox.Location = new Point(130, 20);      //Позиция
            connectionStringTextBox.Size = new Size(430, 20);          //Размер
            connectionStringTextBox.Text = "Сервер: localhost База: YourDBName Строка подключения: Server=localhost;Database=YourDBName;Integrated Security=True";
            connectionStringTextBox.ReadOnly = true;               //Только для чтения
            connectionStringTextBox.BorderStyle = BorderStyle.None;       //Убираем рамку
            connectionStringTextBox.BackColor = settingsPanel.BackColor;       //Цвет совпадает с фоном

            settingsPanel.Controls.Add(connectionStringTextBox); // Add textbox to the gray panel

            // Add all elements to the form
            this.Controls.Add(settingsButton);
            this.Controls.Add(menuButton);
            this.Controls.Add(highlightedSettingsButton);       //Добавляем подсвеченную кнопку вместо обычной
            this.Controls.Add(tablesButton);
            this.Controls.Add(usersButton);
            this.Controls.Add(settingsPanel);
        }

        private Button CreateButton(string text, int x, int y)
        {
            Button button = new Button();
            button.Text = text;
            button.Location = new Point(x, y);
            button.Size = new Size(100, 40);
            return button;
        }

        /// <summary>
        /// Required designer variable.
        /// </summary>
        private System.ComponentModel.IContainer components = null;

        /// <summary>
        /// Clean up any resources being used.
        /// </summary>
        /// <param name="disposing">true if managed resources should be disposed; otherwise, false.</param>
        protected override void Dispose(bool disposing)
        {
            if (disposing && (components != null))
            {
                components.Dispose();
            }
            base.Dispose(disposing);
        }

        #region Windows Form Designer generated code

        /// <summary>
        /// Required method for Designer support - do not modify
        /// the contents of this method with the code editor.
        /// </summary>
        private void InitializeComponent()
        {
            this.components = new System.ComponentModel.Container();
            this.AutoScaleMode = System.Windows.Forms.AutoScaleMode.Font;
            this.ClientSize = new System.Drawing.Size(600, 300);        //Размеры для корректного отображения элементов
            this.Text = "SettingsForm";
        }

        #endregion
    }
}
